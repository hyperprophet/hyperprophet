# Root editor config file
root = true

# Common settings
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Makefile settings
[Makefile]
indent_style = tab
tab_width = 4

# *.py files settings
[*.py]
indent_style = space
indent_size = 4

# js, yml, json and markdown settings
[{*.js,*.yml,*.yaml,*.json,*.md}]
indent_style = space
indent_size = 2
